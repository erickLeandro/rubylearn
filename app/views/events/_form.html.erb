<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <% if flash[:error] %>
    <p style="padding:10px; background:red; font: 12px/12px Arial; color:#fff; width:300px;"><%= flash[:error] %></p>
  <% end %>   

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :start_at %><br>
    <%= f.date_select :start_at %>
  </div>
  <div class="field">
    <%= f.label :tag %> <br>
    <%= f.select :tag_id, Tag.pluck(:name, :id) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
